{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "routes": [
    {
      "src": "/api/account-applications",
      "dest": "/api/account-applications.ts"
    },
    {
      "src": "/api/loan-applications", 
      "dest": "/api/loan-applications.ts"
    },
    {
      "src": "/api/contact-messages",
      "dest": "/api/contact-messages.ts"
    },
    {
      "src": "/api/branches",
      "dest": "/api/branches.ts"
    },
    {
      "src": "/attached_assets/(.*)",
      "dest": "/attached_assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ],
  "functions": {
    "api/*.ts": {
      "includeFiles": ["attached_assets/**", "dist/public/**", "shared/**", "server/storage.ts", "server/db.ts"]
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}